		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"unocss": "^0.55.6",
		"vite": "^4.4.2",
		"vitest": "^0.32.2"
	},
	"type": "module",
	"dependencies": {
		"@lucia-auth/adapter-postgresql": "^2.0.1",
		"@melt-ui/svelte": "^0.41.3",
		"@neondatabase/serverless": "^0.6.0",
		"drizzle-orm": "^0.28.5",
		"lucia": "^2.4.2",
		"postgres": "^3.3.5"
	}
